<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ArchivistGame.SettingsFunction.Settings">
    <ContentPage.Content>

        <StackLayout>
            <Label HorizontalOptions="CenterAndExpand" Text="Server indstillinger" FontSize="Large"></Label>
            <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
                <Label Text="IP adresse" VerticalTextAlignment="Center"></Label>
                <Entry x:Name="Ip_adresse" Text="{Binding Current_IP}" Placeholder="Ip"></Entry>
            </StackLayout>
            <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
                <Label Text="Port" VerticalTextAlignment="Center"></Label>
                <Entry Keyboard="Numeric" x:Name="Port_adresse" Text="{Binding Current_PORT}" Placeholder="Port"></Entry>
            </StackLayout>
            <Button x:Name="Ændre_indstillinger_Btn" Clicked="Ændre_indstillinger_Btn_Clicked" Text="Ændre indstillinger"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>